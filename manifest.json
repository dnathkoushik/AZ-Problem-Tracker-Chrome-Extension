{
  "manifest_version": 3,
  "name": "AZ Enhancer",
  "version": "1.0",
  "author": "Apurba Kumar Show",
  "description": "A Chrome extension to enhance the Maang.in experience by adding a chat bot",
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://maang.in/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "AZ Chat Bot"
  }
}
